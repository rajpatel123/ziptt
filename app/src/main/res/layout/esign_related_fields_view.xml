<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoM
                android:id="@+id/tv_applicant_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Applicant 1:"
                android:textColor="@color/black" />

            <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoM
                android:id="@+id/applicant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/dp_10"
                android:text="1"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoM
            android:id="@+id/applicant_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Raj Patel"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dp_5"

            android:background="@color/dark_gray" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <com.ziploan.team.verification_module.customviews.edittext.CustomEditTextRobotoR
                android:id="@+id/et_mothersName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:hint="Mother's Maiden Name"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/ts_14" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight(in Kg)"
                    android:textSize="10sp" />

                <com.ziploan.team.verification_module.customviews.edittext.CustomEditTextRobotoR

                    android:id="@+id/weightTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/layout_background_round_corner_white_gray_stroke_button"
                    android:gravity="center"
                    android:hint="75 Kg"
                    android:inputType="number"
                    android:maxWidth="80dp"
                    android:maxLength="3"
                    android:minWidth="80dp"
                    android:padding="@dimen/dp_10"
                    android:singleLine="true" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height(In Feet)"
                    android:textSize="10sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/layout_background_round_corner_white_gray_stroke_button"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/heightTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/hfeet_hint"
                        android:inputType="number"
                        android:maxLength="1"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:singleLine="true" />


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height(In Inches)"
                    android:textSize="10sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/layout_background_round_corner_white_gray_stroke_button"
                    android:gravity="center"
                    android:maxWidth="80dp"
                    android:minWidth="80dp"
                    android:orientation="horizontal">

                    <com.ziploan.team.verification_module.customviews.edittext.CustomEditTextRobotoR
                        android:id="@+id/inchesTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/inches"
                        android:inputType="number"
                        android:maxLength="2"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:singleLine="true" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>