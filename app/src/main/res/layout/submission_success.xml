<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:padding="@dimen/dp_20"
    android:layout_margin="@dimen/dp_20"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:backgroundTintMode="screen"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ImageView
    android:layout_marginTop="@dimen/dp_40"
    android:layout_gravity="center_horizontal"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:src="@drawable/ic_green_check"/>

    <TextView
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:id="@+id/success_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/success_message"
        style="@style/sub_heading_style"/>

    <Button
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/green_border_drawable"
        android:layout_width="wrap_content"
        android:padding="@dimen/dp_10"
        android:id="@+id/success_ok"
        android:layout_height="wrap_content"
        android:textColor="@color/light_green"
        android:text="@android:string/ok"/>
</LinearLayout>
