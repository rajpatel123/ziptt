<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgound_gray"
            android:orientation="vertical"
            android:layout_weight="1">

            <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoR
                android:id="@+id/label_pan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAN Card Photos"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/ts_18"
                android:padding="@dimen/dp_16"/>


            <android.support.v7.widget.CardView
                android:id="@+id/cardViewPan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:cardUseCompatPadding="true"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoR
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Primary Applicant Pan Card Photo"
                            android:textSize="@dimen/ts_14"
                            android:textColor="@color/text_color_black"/>
                        android:textColor="@color/text_color_black"/>

                        <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoM
                            android:id="@+id/tv_view_pan_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/ts_14"
                            android:visibility="gone"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_14"
                            android:textColor="@color/text_color_blue"
                            android:text="VIEW PAN DOCUMENT"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:background="@android:color/transparent"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/ivFirstPan"
                                android:layout_width="@dimen/dp_110"
                                android:layout_height="@dimen/dp_110"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:scaleType="fitXY"
                                android:src="@mipmap/photo"/>
                            <ImageView
                                android:id="@+id/delete_first_pan_photo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|top"
                                android:visibility="gone"
                                android:src="@mipmap/close"/>
                        </FrameLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoR
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Secondary Applicant Pan Card Photo"
                            android:textSize="@dimen/ts_14"
                            android:layout_marginTop="@dimen/dp_20"
                            android:textColor="@color/text_color_black"/>
                        <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoM
                            android:id="@+id/tv_view_pan_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/ts_14"
                            android:visibility="gone"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_14"
                            android:textColor="@color/text_color_blue"
                            android:text="VIEW PAN DOCUMENT"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:background="@android:color/transparent"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/ivSecondPan"
                                android:layout_width="@dimen/dp_110"
                                android:layout_height="@dimen/dp_110"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:scaleType="fitXY"
                                android:src="@mipmap/photo"/>
                            <ImageView
                                android:id="@+id/delete_second_pan_photo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|top"
                                android:visibility="gone"
                                android:src="@mipmap/close"/>
                        </FrameLayout>


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoR
                android:id="@+id/label_loantype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Type"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/ts_18"
                android:padding="@dimen/dp_16"/>
            <android.support.v7.widget.CardView
                android:id="@+id/cardViewLoanType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:cardUseCompatPadding="true"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_14"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.ziploan.team.verification_module.customviews.CustomSpinnerRobotoR
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_5"
                            android:inputType="textPersonName"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/ts_14"
                            android:hint="Name"
                            android:id="@+id/spinnerLoanType" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <com.ziploan.team.verification_module.customviews.edittext.CustomEditTextRobotoR
                            android:id="@+id/et_loan_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:textColor="@color/text_color_black"
                            android:hint="Loan type"
                            android:textSize="@dimen/ts_14"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoR
                android:id="@+id/label_entity_proof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entity Proof"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/ts_18"
                android:padding="@dimen/dp_16"/>
            <android.support.v7.widget.CardView
                android:id="@+id/cardViewEntityProof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:cardUseCompatPadding="true"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_14"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.ziploan.team.verification_module.customviews.CustomSpinnerRobotoR
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_5"
                            android:inputType="textPersonName"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/ts_14"
                            android:hint="Name"
                            android:id="@+id/spinnerEntity" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <com.ziploan.team.verification_module.customviews.edittext.CustomEditTextRobotoR
                            android:id="@+id/et_entity_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:textColor="@color/text_color_black"
                            android:hint="Entity Document type"
                            android:textSize="@dimen/ts_14"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10">
                        <com.ziploan.team.verification_module.customviews.edittext.CustomEditTextRobotoR
                            android:id="@+id/et_entity_proof_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:textColor="@color/text_color_black"
                            android:hint="Entity Proof Number"
                            android:textSize="@dimen/ts_14"/>
                    </android.support.design.widget.TextInputLayout>

                    <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoM
                        android:id="@+id/tv_view_entity_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ts_14"
                        android:visibility="gone"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_20"
                        android:paddingBottom="@dimen/dp_14"
                        android:textColor="@color/text_color_blue"
                        android:text="VIEW ENTITY DOCUMENT"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoR
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Image"
                            android:textSize="@dimen/ts_14"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_20"
                            android:textColor="@color/text_color_black"/>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_entity_photos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoR
                android:id="@+id/labelBusinessAddProof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Place Address Proof"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/ts_18"
                android:padding="@dimen/dp_16"/>
            <android.support.v7.widget.CardView
                android:id="@+id/cardViewBusinesAddProof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:cardUseCompatPadding="true"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_14"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.ziploan.team.verification_module.customviews.CustomSpinnerRobotoR
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_5"
                            android:inputType="textPersonName"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/ts_14"
                            android:hint="Name"
                            android:id="@+id/spinnerBusinessAddress" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <com.ziploan.team.verification_module.customviews.edittext.CustomEditTextRobotoR
                            android:id="@+id/et_business_add_proof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:textColor="@color/text_color_black"
                            android:hint="Business address proof"
                            android:textSize="@dimen/ts_14"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10">
                        <com.ziploan.team.verification_module.customviews.edittext.CustomEditTextRobotoR
                            android:id="@+id/et_business_proof_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:textColor="@color/text_color_black"
                            android:hint="Business Place Address Proof Id Number"
                            android:textSize="@dimen/ts_14"/>
                    </android.support.design.widget.TextInputLayout>

                    <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoM
                        android:id="@+id/tv_view_business_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ts_14"
                        android:visibility="gone"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_20"
                        android:paddingBottom="@dimen/dp_14"
                        android:textColor="@color/text_color_blue"
                        android:text="VIEW BUSINESS PLACE DOCUMENT"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoR
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Image"
                            android:textSize="@dimen/ts_14"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_20"
                            android:textColor="@color/text_color_black"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_business_photos"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoR
                android:id="@+id/labelResidenceAddProof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Residence Place Address Proof"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/ts_18"
                android:padding="@dimen/dp_16"/>
            <android.support.v7.widget.CardView
                android:id="@+id/cardViewResidenceAddProof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:cardUseCompatPadding="true"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_14"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.ziploan.team.verification_module.customviews.CustomSpinnerRobotoR
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_5"
                            android:inputType="textPersonName"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/ts_14"
                            android:hint="Name"
                            android:id="@+id/spinnerResidenceAddress" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <com.ziploan.team.verification_module.customviews.edittext.CustomEditTextRobotoR
                            android:id="@+id/et_residence_add_proof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:textColor="@color/text_color_black"
                            android:hint="Residence address proof"
                            android:textSize="@dimen/ts_14"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10">
                        <com.ziploan.team.verification_module.customviews.edittext.CustomEditTextRobotoR
                            android:id="@+id/et_residence_proof_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:textColor="@color/text_color_black"
                            android:hint="Residence Place Address Proof Id Number"
                            android:textSize="@dimen/ts_14"/>
                    </android.support.design.widget.TextInputLayout>

                    <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoM
                        android:id="@+id/tv_view_residence_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ts_14"
                        android:visibility="gone"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_20"
                        android:paddingBottom="@dimen/dp_14"
                        android:textColor="@color/text_color_blue"
                        android:text="VIEW RESIDENCE PLACE DOCUMENT"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.ziploan.team.verification_module.customviews.textview.CustomTextViewRobotoR
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Image"
                            android:textSize="@dimen/ts_14"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_20"
                            android:textColor="@color/text_color_black"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_residence_photos"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <com.ziploan.team.verification_module.customviews.button.CustomButtonRobotoM
                    android:id="@+id/tv_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/layout_background_round_corner_white_button"
                    android:padding="@dimen/dp_14"
                    android:text="BACK"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />


                <com.ziploan.team.verification_module.customviews.button.CustomButtonRobotoM
                    android:id="@+id/tv_continue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/background_selector_orange"
                    android:padding="@dimen/dp_14"
                    android:text="SUBMIT"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>