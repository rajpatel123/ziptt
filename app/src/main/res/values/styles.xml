<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>

    </style>

    <style name="Theme" parent="Theme.AppCompat"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="editTextCommon">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:background">@drawable/bg_edittext_common</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/ts_13</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="edittextAreaCommon">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:background">@drawable/bg_edittext_common</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_13</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
    </style>

    <style name="editTextLabelCommon">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_11</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:layout_marginRight">@dimen/dp_5</item>
    </style>

    <style name="textViewMedium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_14</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_marginRight">@dimen/dp_5</item>
    </style>
    <style name="textViewSmall">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_12</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_marginRight">@dimen/dp_5</item>
    </style>
    <style name="textViewVerySmall">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_10</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_marginRight">@dimen/dp_5</item>
    </style>

    <style name="textViewTitle">
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_13</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_marginRight">@dimen/dp_5</item>
    </style>

    <style name="buttonCommon">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/ts_14</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/backgroung_solid_button_accent</item>
    </style>

    <style name="mediumSizeButtonSelector">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_10</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:background">@drawable/button_effect_common</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:textColor">@drawable/button_text_color_selctor</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="radioButtonCommon">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_12</item>
    </style>

    <style name="textViewValue">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_13</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_marginRight">@dimen/dp_5</item>
    </style>

    <style name="Theme.UserDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:background">#ffffff</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--Collections-->

    <style name="CollectionAppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>

    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ff4500</item>
        <item name="colorPrimaryDark">@color/f61c00</item>
        <item name="colorAccent">@color/color_424242</item>
        <!--<item name="fontFamily">@font/googlesans_medium</item>-->
        <item name="android:autofilledHighlight">@android:color/transparent</item>
    </style>

    <style name="normal_qty_edit_style" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@color/edit_text_color_common</item>
        <item name="android:textColor">@color/edit_text_color_common</item>
        <item name="android:textSize">@dimen/ts_14</item>
    </style>

    <style name="heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/ts_15</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/effra_bold</item>
    </style>

    <style name="sub_heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/ts_18</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/effra</item>
    </style>

    <style name="btn_orange_style" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ts_12</item>
        <item name="android:fontFamily">@font/effra_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:padding">8dp</item>
    </style>
    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/f61c00</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orange_ff5b17</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>
</resources>
